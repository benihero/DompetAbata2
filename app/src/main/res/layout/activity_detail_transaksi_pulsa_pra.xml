<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ubahpin"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".PulsaPrabayar.DetailTransaksiPulsaPra">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/mukta"
        android:text="Informasi Transaksi"
        android:textStyle="bold" />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nomor Tujuan"
            android:id="@+id/mytextview1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="085788387839"
            android:layout_alignParentRight="true"
            android:id="@+id/mytextview2"/>

    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Produk"
            android:id="@+id/produk"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa Telkomsel Rp.5000"
            android:layout_alignParentRight="true"
            android:id="@+id/produkpulsa"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:fontFamily="@font/mukta"
        android:text="Detail Pembayaran"
        android:textStyle="bold" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Harga Produk"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_alignParentRight="true"
            android:id="@+id/hargaproduk"/>

    </RelativeLayout>
    <TextView
        android:layout_marginHorizontal="6dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dash"
        />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:text="Total Pemayaran"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.5000"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:id="@+id/totalpembayaran"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tutupdetail"
            android:layout_width="0dp"
          android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_login3"
            android:layout_height="36dp"
            android:text="Tutup"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/konfirmasidetail"
            android:layout_width="0dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_login2"
            android:layout_height="36dp"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </LinearLayout>

    </LinearLayout>


